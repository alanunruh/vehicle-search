<div class="container">
  <% flash.each do |key, value| %>
    <div class="<%= flash_class(key) %> text-center">
      <%= value %>
    </div>
  <% end %>

  <div class="col-10 offset-1 col-sm-8 offset-sm-2 col-md-6 offset-md-3">
    <div class="box col-10 offset-1">
      <h1 class="text-center">Add A Vehicle</h1>
      <div class="form col-10 offset-1">
        <%= simple_form_for Vehicle.new do |f| %>
          <%= f.input :vin, label: 'Vehicle VIN' %>
          <%= f.submit "Submit", class: 'btn btn-primary btn-large' %>
        <% end %>
      <div>
      <br/>
      <h6 class="text-center"><%= link_to "See All Your Vehicles", vehicles_path %></h6>
    </div>
  </div>
</div>